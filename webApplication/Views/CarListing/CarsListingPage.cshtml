@model IEnumerable<webApplication.Models.CarDetails>

@{
    var totalCars = Model.Count();
    ViewData["Title"] = "CarsListingPage";
}

<div class="main-body">
    <aside class="filter-section">
        <div class="side-bar">
            <button class="find-ride-btn">Find Your Perfect Ride!</button>
            <!-- Filtering options here (same as before) -->
        </div>
    </aside>

    <div class="car-tile-rows">
        <div class="search-bar">
            <input type="text" name="searchbar" value="" placeholder='"Search for an Ideal Car"' />
        </div>

        <!-- Car Tiles Section -->
        <div class="car-tiles-div" id="carTilesContainer">
            <!-- Initial 6 car tiles rendered first -->
            @foreach (var car in Model.Take(6))
            {
                @Html.Partial("_CarDetailsTile", car)
            }
        </div>

        <!-- Show More button (only if more than 6 cars exist) -->
        @if (totalCars > 6)
        {
            <div id="showMoreContainer">
                <button id="showMoreBtn" class="show-more-btn">Show More</button>
            </div>
        }
    </div>
</div>
