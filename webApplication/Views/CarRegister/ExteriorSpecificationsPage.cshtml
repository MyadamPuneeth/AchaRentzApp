@model webApplication.Models.CarDetails

@{
    ViewData["Title"] = "ExteriorSpecificationsPage";
}

<div class="status-bar-car-basci-details-page">
    @await Html.PartialAsync("_StatusBar")
</div>
<div class="row">
    <div class="col-md-4">
        <div class="car-basic-info-section-aligner">
            <div class="car-basic-info-section">
                <h2>Exterior Specifications Page</h2>
                <form asp-action="ExteriorSpecificationsPage" method="post">
                    <div class="car-info-item">
                        <label asp-for="Color" class="control-label"></label>
                        <input asp-for="Color" class="form-control" />
                    </div>
                    <div class="car-info-item">
                        <label asp-for="Length" class="control-label"></label>
                        <input asp-for="Length" class="form-control" />
                    </div>
                    <div class="car-info-item">
                        <label asp-for="Height" class="control-label"></label>
                        <input asp-for="Height" class="form-control" />
                    </div>
                    <div class="car-info-item">
                        <label asp-for="Width" class="control-label"></label>
                        <input asp-for="Width" class="form-control" />
                    </div>
                    <div class="car-info-item">
                        <label asp-for="SeatingCapacity" class="control-label"></label>
                        <input asp-for="SeatingCapacity" class="form-control" />
                    </div>
                    <div class="car-info-item">
                        <label asp-for="NumberOfDoors" class="control-label"></label>
                        <input asp-for="NumberOfDoors" class="form-control" />
                    </div>
                    <button type="submit">Next</button>
                </form>

            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<style>
    .status-bar-car-basci-details-page {
        display: flex;
        justify-content: center;
    }

    .car-basic-info-section {
        color: white;
        background: #4D4D4D;
        width: 50vw;
        display: flex;
        flex-direction: column;
        height: 70vh;
        border-radius: 5px;
    }

        .car-basic-info-section form {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 55vh;
            align-items: center;
            margin-top: 2vh;
        }

    .car-basic-info-section-aligner {
        margin-top: 3vh;
        color: white;
        display: flex;
        justify-content: center;
    }

    .car-info-item {
        display: flex;
        width: 35vw;
        justify-content: space-between;
        align-items: center;
    }

        .car-info-item input {
            height: 5vh;
            width: 20vw;
            padding-left: 1vw;
        }

    .car-basic-info-section button {
        width: 10vw;
        height: 7vh;
        background: #29D23D;
        border: 0;
        color: white;
        font-weight: bold;
        border-radius: 3px;
    }
</style>