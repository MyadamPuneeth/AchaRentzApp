
@{
    ViewData["Title"] = "CarDetailsPage";
}

<div class="car-details-container">
    <div class="car-details-header">
        <h1>Car Registration</h1>
    </div>

    <form action="/submit" method="POST" enctype="multipart/form-data">
        <div class="car-details-form-group">
            <label for="carModel" class="car-details-form-label">Car Model*</label>
            <input type="text" id="carModel" name="carModel" class="car-details-form-input" required>
        </div>

        <div class="car-details-form-group">
            <label for="insuranceNumber" class="car-details-form-label">Insurance Number*</label>
            <input type="text" id="insuranceNumber" name="insuranceNumber" class="car-details-form-input" required>
            <input type="file" id="uploadInsurance" name="insuranceFile" class="car-details-upload-btn">
        </div>

        <div class="car-details-form-group">
            <label for="carCompany" class="car-details-form-label">Car Company*</label>
            <input type="text" id="carCompany" name="carCompany" class="car-details-form-input" required>
        </div>

        <div class="car-details-form-group">
            <label for="rcNumber" class="car-details-form-label">RC Number*</label>
            <input type="text" id="rcNumber" name="rcNumber" class="car-details-form-input" required>
            <input type="file" id="uploadRC" name="rcFile" class="car-details-upload-btn">
        </div>

        <div class="car-details-form-group">
            <label for="manufacturedYear" class="car-details-form-label">Manufactured Year*</label>
            <input type="number" id="manufacturedYear" name="manufacturedYear" class="car-details-number-input" required>
        </div>

        <div class="car-details-form-group">
            <label for="rtoCertificate" class="car-details-form-label">RTO Certificate</label>
            <input type="file" id="rtoCertificate" name="rtoCertificate" class="car-details-upload-btn">
        </div>

        <div class="car-details-form-group">
            <label for="purchasedYear" class="car-details-form-label">Purchased Year*</label>
            <input type="number" id="purchasedYear" name="purchasedYear" class="car-details-number-input" required>
        </div>

        <div class="car-details-form-group">
            <label for="mileage" class="car-details-form-label">Expected Mileage</label>
            <input type="number" id="mileage" name="mileage" class="car-details-number-input">
        </div>

        <div class="car-details-form-group">
            <button type="submit" class="car-details-submit-btn">Next</button>
        </div>
    </form>
</div>

