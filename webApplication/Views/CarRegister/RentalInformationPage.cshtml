@model AchaRentzBLL.DTO.CarDto

@{
    ViewData["Title"] = "RentalInformationPage";
}

<div class="status-bar-car-basci-details-page">
    @await Html.PartialAsync("_StatusBar")
</div>

<div class="car-basic-info-section-aligner">
    <div class="car-basic-info-section">
        <h2>Rental Information</h2>
        <form asp-action="RentalInformationPage" method="post">
            <div class="car-info-item">
                <label asp-for="RentalPricePerDay" class="control-label"></label>
                <input asp-for="RentalPricePerDay" class="form-control" />
            </div>
            <div class="car-info-item">
                <label asp-for="IsAvailable" class="control-label"></label>
                <input asp-for="IsAvailable" class="form-control" />
            </div>
            <div class="car-info-item">
                <label asp-for="RentalLocation" class="control-label"></label>
                <input asp-for="RentalLocation" class="form-control" />
            </div>
            <div class="car-info-item">
                <label asp-for="AvailableFrom" class="control-label"></label>
                <input asp-for="AvailableFrom" class="form-control" />
            </div>
            <div class="car-info-item">
                <label asp-for="AvailableUntil" class="control-label"></label>
                <input asp-for="AvailableUntil" class="form-control" />
            </div>
            <div class="car-info-item">
                <label asp-for="MinimumRentalPeriod" class="control-label"></label>
                <input asp-for="MinimumRentalPeriod" class="form-control" />
            </div>
            <div class="car-info-item">
                <label asp-for="HomeDeliveryAvailable" class="control-label"></label>
                <input asp-for="HomeDeliveryAvailable" class="form-control" />
            </div>
            <button type="submit">Next</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<style>
    .status-bar-car-basci-details-page {
        display: flex;
        justify-content: center;
    }

    .car-basic-info-section {
        color: white;
        background: #4D4D4D;
        width: 50vw;
        display: flex;
        flex-direction: column;
        height: 70vh;
        border-radius: 5px;
    }

        .car-basic-info-section form {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 55vh;
            align-items: center;
            margin-top: 2vh;
        }

    .car-basic-info-section-aligner {
        margin-top: 3vh;
        color: white;
        display: flex;
        justify-content: center;
    }

    .car-info-item {
        display: flex;
        width: 35vw;
        justify-content: space-between;
        align-items: center;
    }

        .car-info-item input {
            height: 5vh;
            width: 20vw;
            padding-left: 1vw;
        }

    .car-basic-info-section button {
        width: 10vw;
        height: 7vh;
        background: #29D23D;
        border: 0;
        color: white;
        font-weight: bold;
        border-radius: 3px;
    }
</style>