@model webApplication.Models.CarDetails

@{
    ViewData["Title"] = "RentalInformationPage";
}

<h1>RentalInformationPage</h1>

<h4>CarDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RentalInformationPage">
