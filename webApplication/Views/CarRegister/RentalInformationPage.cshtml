            </div>
            <div class="form-group">
                <label asp-for="IsAvailable" class="control-label"></label>
                <input asp-for="IsAvailable" class="form-control" />
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalLocation" class="control-label"></label>
                <input asp-for="RentalLocation" class="form-control" />
                <span asp-validation-for="RentalLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailableFrom" class="control-label"></label>
                <input asp-for="AvailableFrom" class="form-control" />
                <span asp-validation-for="AvailableFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailableUntil" class="control-label"></label>
                <input asp-for="AvailableUntil" class="form-control" />
                <span asp-validation-for="AvailableUntil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinimumRentalPeriod" class="control-label"></label>
                <input asp-for="MinimumRentalPeriod" class="form-control" />
                <span asp-validation-for="MinimumRentalPeriod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeDeliveryAvailable" class="control-label"></label>
                <input asp-for="HomeDeliveryAvailable" class="form-control" />
                <span asp-validation-for="HomeDeliveryAvailable" class="text-danger"></span>
            </div>
