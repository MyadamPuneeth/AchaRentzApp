@model webApplication.Models.CarDetails

@{
    ViewData["Title"] = "CarFeaturesPage";
}

<div class="status-bar-car-basci-details-page">
    @await Html.PartialAsync("_StatusBar")
</div>
<div class="car-basic-info-section-aligner">
    <div class="car-basic-info-section">
        <h2>Feature Details</h2>
        <form asp-action="CarFeaturesPage" method="post">
            <div class="car-info-item">
                <label asp-for="HasAirConditioning" class="control-label">Has Air Conditioning</label>
                <select asp-for="HasAirConditioning" class="form-control">
                    <option value="false">False</option>
                    <option value="true">True</option>
                </select>
            </div>

            <!-- GPS -->
            <div class="car-info-item">
                <label asp-for="HasGPS" class="control-label">Has GPS</label>
                <select asp-for="HasGPS" class="form-control">
                    <option value="false">False</option>
                    <option value="true">True</option>
                </select>
            </div>

            <!-- Bluetooth -->
            <div class="car-info-item">
                <label asp-for="HasBluetooth" class="control-label">Has Bluetooth</label>
                <select asp-for="HasBluetooth" class="form-control">
                    <option value="false">False</option>
                    <option value="true">True</option>
                </select>
            </div>

            <!-- Heated Seats -->
            <div class="car-info-item">
                <label asp-for="HasHeatedSeats" class="control-label">Has Heated Seats</label>
                <select asp-for="HasHeatedSeats" class="form-control">
                    <option value="false">False</option>
                    <option value="true">True</option>
                </select>
            </div>

            <!-- Backup Camera -->
            <div class="car-info-item">
                <label asp-for="HasBackupCamera" class="control-label">Has Backup Camera</label>
                <select asp-for="HasBackupCamera" class="form-control">
                    <option value="false">False</option>
                    <option value="true">True</option>
                </select>
            </div>

            <!-- Child Seat -->
            <div class="car-info-item">
                <label asp-for="HasChildSeat" class="control-label">Has Child Seat</label>
                <select asp-for="HasChildSeat" class="form-control">
                    <option value="false">False</option>
                    <option value="true">True</option>
                </select>
            </div>
            <button type="submit" class="button-hover">Next</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="button-hover">Back to List</a>
</div>

<style>
    .status-bar-car-basci-details-page {
        display: flex;
        justify-content: center;
    }

    .car-basic-info-section {
        color: white;
        background: #4D4D4D;
        width: 50vw;
        display: flex;
        flex-direction: column;
        height: 70vh;
        border-radius: 5px;
    }

        .car-basic-info-section form {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 55vh;
            align-items: center;
            margin-top: 2vh;
        }

    .car-basic-info-section-aligner {
        margin-top: 3vh;
        color: white;
        display: flex;
        justify-content: center;
    }

    .car-info-item {
        display: flex;
        width: 35vw;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2vh;
    }

    .car-basic-info-section button, .button-hover {
        width: 10vw;
        height: 7vh;
        background: #29D23D;
        border: 0;
        color: white;
        font-weight: bold;
        border-radius: 3px;
        cursor: pointer;
    }

        .button-hover:hover {
            transform: scale(1.05);
        }

        .form-control{
        height: 5vh;
        width: 20vw;
        padding-left: 1vw;
        }

</style>
